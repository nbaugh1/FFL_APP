<br><br>
 <div class="row">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s1">
                    <a href="#all"class="black-text">All</a>
            </li>
            <% @positions.each do |position|%>
            <li class="tab col s1">
                <a href="#<%=position%>" class="black-text"><%= position %></a>
            </li>
            <% end %>
        </ul>
    
    </div>
    
    
    <div id="all" class="col s12">
        <table>
        <thead>
            <tr>
                <th>Rank</th>
                <th>Name</th>
                <th>Position</th>
                <th>NFL Team</th>
                <th>2018 Points<th>
                </tr>
        </thead>
        <tbody>
            <% Player.all.each do |player| %>
                <tr>
                    <td><%= player.rank %></td>
                    <td><%= player.first_name %> <%= player.last_name %></td>
                    <td><%= player.position %></td>
                    <td><%= player.nfl_team %></td>
                    <td><%= player.points %></td>
                    <% if player.team_id == nil %>
                        <td><a class="waves-effect waves-light btn green accent-2" href="/players/<%= player.id %>/edit">Add Player</a><td>
                    <% elsif player.team_id == session[:team_id].to_i %>
                        <td><a class="waves-effect waves-light btn green accent-2 disabled" href="/players/<%= player.id %>/edit">Add Player</a><td>
                        <td><a class="waves-effect waves-light btn green accent-2" href="/players/<%= player.id %>">Drop Player</a><td>
                    <% else %>
                        <td><a class="waves-effect waves-light btn green accent-2 disabled" href="/players/<%= player.id %>/edit">Add Player</a><td>
                    <% end %>
                    </tr>
                <% end %>
            </tbody>
        </table>
