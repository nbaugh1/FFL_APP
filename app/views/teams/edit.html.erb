<br><form action="/teams/<%= @team.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">

<div class="row">
    <div class="col s8 offset-s2">
        <div class="card-panel white">
        <div class="center-align">
            <h5>Change Team Name</h5>
        </div>
            <span class="white-text">
                <div class="input-field col s9">
                    <input placeholder="<%= @team.name %>" id="new_team_name" name="new_team_name" type="text" class="validate">
                    <label for="new_team_name">Change Team Name:</label>
                </div>
                <div>
                    <button class="btn waves-effect waves-light green accent-2 white-text" type="submit" name="action">Save</button>
                </div>
                <br>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s8 offset-s2">
        <div class="card-panel white">
        <div class="center-align">
            <h5>Change Roster Size</h5>
        </div>
            <span class="white-text">
                <div class="input-field col s9">
                    <input placeholder="<%= @team.roster_size %>" id="new_roster_size" name="new_roster_size" type="text" class="validate">
                    <label for="new_roster_size">Change Roster Size:</label>
                </div>
                <div>
                    <button class="btn waves-effect waves-light green accent-2 white-text" type="submit" name="action">Save</button>
                </div>
                <br>
        </div>
    </div>
</div>

</form>

<a href="/teams" class="center-align">Back to teams list</a> 
    

