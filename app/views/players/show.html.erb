

<h2><%= @player.first_name %> <%= @player.last_name %><br></h2>
<h5>Price paid: $<%= @player.actual_price %></h5>
<h5>Team: <a href="/teams/<%= @team.id %>"><%= @team.name %></a></h5>
<div class="row">
  <div class="col s12 m6">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Fantasy Analysis</span>
        <p>Week 1 Projections:</p>
        <p><%= @doc.css("div#toolsContent table tr")[33].text %></p>
        <p><%= @doc.css("div#toolsContent table tr")[34].text %></p>
        <p><%= @doc.css("div#toolsContent table tr")[41].text %></p>
        <p><%= @doc.css("div#toolsContent table tr")[35].text %></p>
        <p>Projected Points: <%= @player.projections.fantasy_points %></p>
      </div>
    </div>
  </div>
</div>
<div>
    <% if @team.players.count < @team.roster_size %>
        <a class="waves-effect waves-light btn green accent-2" href="/teams/<%= @team.id %>/add_player">Add Another Player</a>
        <a class="waves-effect waves-light btn modal-trigger green accent-2" href="#modal1">Drop Player</a>
        <a class="waves-effect waves-light btn modal-trigger green accent-2" href="/teams">Teams List</a>
    <% else %>
        <a class="waves-effect waves-light btn green accent-2 disabled" href="/teams/<%= @team.id %>/add_player">Add Another Player</a>
        <a class="waves-effect waves-light btn modal-trigger green accent-2" href="/teams">Teams List</a>
    <% end %>
</div>
<br>
<div>
  <div id="modal1" class="modal">
    <div class="modal-content">
      <h4>Drop Player</h4>
      <p>Are you sure you want to drop <%=  @player.first_name %> <%=  @player.last_name %></p>
    </div>
    <div class="modal-footer">
      <a href="/teams/<%= @player.id %>/drop_player" class="modal-close waves-effect waves-green btn-flat">Yes</a>
    </div>
  </div>
</div>



